{
  "name": "@mp-consulting/homebridge-ewelink",
  "displayName": "Homebridge eWeLink",
  "version": "1.0.13",
  "type": "module",
  "description": "Homebridge plugin to integrate eWeLink devices into HomeKit",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
