    "@types/node": "^22.10.2",
    "@types/node-persist": "^3.1.8",
    "@types/ws": "^8.5.13",
    "eslint": "^9.17.0",
    "homebridge": "2.0.0-beta.65",
    "homebridge-config-ui-x": "^4.80.0",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  }
